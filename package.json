{
  "name": "autoriven-api",
  "version": "1.0.0",
  "description": "AutoRiven API - NestJS Backend with PostgreSQL and Elasticsearch",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "seed": "ts-node src/database/seeder.ts",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate src/database/migrations/migration -d src/database/data-source.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/database/data-source.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/database/data-source.ts",
    "schema:sync": "typeorm-ts-node-commonjs schema:sync -d src/database/data-source.ts",
    "seed:categories": "ts-node src/database/seeders/category.seeder.ts",
    "lint": "eslint \"{src,apps,libs}/**/*.ts\" --fix",
    "scrape:categories": "ts-node scripts/scrape-categories.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AutoRiven/autoriven-api.git"
  },
  "keywords": [
    "nestjs",
    "api",
    "postgresql",
    "elasticsearch",
    "jwt",
    "authentication"
  ],
  "author": "AutoRiven",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AutoRiven/autoriven-api/issues"
  },
  "homepage": "https://github.com/AutoRiven/autoriven-api#readme",
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/elasticsearch": "^10.0.0",
    "@nestjs/jwt": "^10.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/typeorm": "^10.0.0",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@types/axios": "^0.9.36",
    "@types/bcryptjs": "^2.4.2",
    "@types/node": "^20.19.11",
    "@types/passport-jwt": "^3.0.9",
    "@types/passport-local": "^1.0.35",
    "@types/pg": "^8.11.6",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  }
}
